extends nav

block content 
    #features-wrapper
        .container
            .row 
                form(id='mapSelectForm')
                    label Select Map 
                    select(name='map' id='mapSelection')
                        option All
                        option(value='anubis') de_anubis
                        option(value='mirage') de_mirage
                        option(value='ancient') de_ancient
                        option(value='dust2') de_dust2
                        option(value='inferno') de_inferno
                        option(value='nuke') de_nuke
                        option(value='vertigo') de_vertigo
            div(id='chartContainer' style='display: flex; flex-direction: row; flex-wrap: wrap; align-items: flex-start; justify-content: flex-start;')
                #gameContainer(style='flex: 0 0 50%;')
                    label(style='font-weight: 700;') Game Results 
                    div(style='width: 95%; margin-left: 2.5%;')
                        canvas(id='gameResults' style='width: 95%;')
                div(style='display: flex; flex-direction: column; width: 25%;')
                    #ctRound1Container(style='flex-grow: 1;')
                        label(style='font-weight: 700;') CT Round 1
                        div(style='width: 95%; margin-left: 2.5%;')
                            canvas(id='ctRound1')
                    #tRound1Container(style='flex-grow: 1;')
                        label(style='font-weight: 700;') T Round 1
                        div(style='width: 95%; margin-left: 2.5%;')
                            canvas(id='tRound1')
                div(style='display: flex; flex-direction: column; width: 25%;')
                    #ctRound2Container(style='flex-grow: 1;')
                        label(style='font-weight: 700;') CT Round 2
                        div(style='width: 95%; margin-left: 2.5%;')
                            canvas(id='ctRound2')
                    #tRound2Container(style='flex-grow: 1;')
                        label(style='font-weight: 700;') T Round 2
                        div(style='width: 95%; margin-left: 2.5%;')
                            canvas(id='tRound2')               
                #ctRound2AfterRound1WinContainer(style='flex: 0 0 25%;')
                    label(style='font-weight: 700;') CT Round 2 After Round 1 Win
                    div(style='width: 95%; margin-left: 2.5%;')
                        canvas(id='ctRound2AfterRound1Win')
                #ctRound2AfterRound1LossContainer(style='flex: 0 0 25%;')
                    label(style='font-weight: 700;') CT Round 2 After Round 1 Loss
                    div(style='width: 95%; margin-left: 2.5%;')
                        canvas(id='ctRound2AfterRound1Loss')
                #tRound2AfterRound1WinContainer(style='flex: 0 0 25%;')
                    label(style='font-weight: 700;') T Round 2 After Round 1 Win
                    div(style='width: 95%; margin-left: 2.5%;')
                        canvas(id='tRound2AfterRound1Win')
                #tRound2AfterRound1LossContainer(style='flex: 0 0 25%;')
                    label(style='font-weight: 700;') T Round 2 After Round 1 Loss
                    div(style='width: 95%; margin-left: 2.5%;')
                        canvas(id='tRound2AfterRound1Loss')

    script(src='https://cdn.jsdelivr.net/npm/chart.js')
    script(src='stats.js')
    script(src='assets/js/jquery.min.js' type='text/javascript')
    script(src='assets/js/jquery.dropotron.min.js' type='text/javascript')
    script(src='assets/js/browser.min.js' type='text/javascript')
    script(src='assets/js/breakpoints.min.js' type='text/javascript')
    script(src='assets/js/util.js' type='text/javascript')
    script(src='assets/js/main.js' type='text/javascript')